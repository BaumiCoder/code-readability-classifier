# Stage 1: Build Stage
# Use the poetry base image
FROM fnndsc/python-poetry:latest as builder

# Set the working directory in the container
WORKDIR /build

# Copy your poetry files into the container
COPY pyproject.toml poetry.lock /build/

# Install Python dependencies using Poetry
RUN poetry config virtualenvs.create false && poetry install

# Stage 2: Runtime Stage
# Use the specified PyTorch base image
FROM anibali/pytorch:2.0.1-cuda11.8-ubuntu22.04 as runtime

# Set the working directory in the container
WORKDIR /app

# Copy the Python dependencies from the builder stage
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages

# Copy the model files
COPY /readability_classifier /app/readability_classifier

# Define the command to run when the container starts
CMD ["python", "readability_classifier/main.py -h"]
